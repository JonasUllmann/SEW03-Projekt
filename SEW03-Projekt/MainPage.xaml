<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEW03_Projekt.MainPage"
             BackgroundColor="White">

    <Grid RowDefinitions="4*, 1*" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <!-- Oberer Bereich: Canvas -->
        <GraphicsView x:Name="canvasView" 
                      VerticalOptions="FillAndExpand" 
                      HorizontalOptions="FillAndExpand" />

        <!-- Unterer Bereich: Steuerungsleiste -->
        <Border Grid.Row="1"
                Stroke="Black" 
                StrokeThickness="2" 
                BackgroundColor="White"
                Padding="10">
            <Grid ColumnDefinitions="2*, 1*, 2*" RowDefinitions="*, Auto, *">
                <HorizontalStackLayout Grid.Column="0" Grid.Row="1" HorizontalOptions="CenterAndExpand" Spacing="10">
                    <Button Text="Button 1" BackgroundColor="SteelBlue" HorizontalOptions="Center" />
                    <Button Text="Button 2" BackgroundColor="SteelBlue" HorizontalOptions="Center" />
                </HorizontalStackLayout>

                <Button Grid.Column="1" Grid.Row="1"
                        Text="FIRE!" 
                        BackgroundColor="IndianRed"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" 
                        Clicked="FIRE_BTN_clicked"
                        
                        />

                <Grid Grid.Column="2" Grid.Row="1" ColumnDefinitions="*, *" RowDefinitions="*, *">
                    <Label x:Name="Label1" Text="Text 1" BackgroundColor="LightGray" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Label Grid.Column="1" Text="Text 2" BackgroundColor="LightGray" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Label Grid.Row="1" Text="Text 3" BackgroundColor="LightGray" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Label Grid.Column="1" Grid.Row="1" Text="Text 4" BackgroundColor="LightGray" HorizontalOptions="Center" VerticalOptions="Center" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
